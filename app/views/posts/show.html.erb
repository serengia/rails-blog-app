<div class="single-post-page">
  <div class="row">
    <%= render partial: "shared/post_body",  locals: {post: @post}%>
   <div class="comments-wrapper">
      <% if !@comments.empty?%>
        <%= render partial: "shared/comments", locals: {comments: @comments}%>
        <%else%>
        <p>There are no comments yet</p>
       <%end%>
    </div>
  </div>
</div>